<!DOCTYPE html>
<html>
	<head>
		<title>Статьи</title>
	</head>
	<body>
		<div style="width:70%; margin:50px auto;">
			<h2>Список статей</h2>
			<div id="tableAuthors">
			</div>
		</div>
	</body>
	<script type="text/javascript">
	function getList(){
		$.ajax({
	  		url: 'posts/list',
	  		success: function(data){

		    	var table = $('<table class="table table-bordered table-hover" id="paggination"></table>');
		    	
				var thead =$('<thead></thead>');

				var tr =$('<tr></tr>');

				var td = $("<th></th>").html("Автор");
		    	tr.append(td);

	    		var td = $("<th></th>").html("Название статьи");
	    		tr.append(td);

	    		var td = $("<th></th>").html("Дата создания");
	    		tr.append(td);

	    		var td = $("<th></th>").html("Теги");
	    		tr.append(td);

		    	thead.append(tr);
				table.append(thead);

	    		for (var i=0; i<data.length; i++){

		    		var tr = $('<tr onclick="showPost('+data[i].id+')"></tr>');

		    		var td = $("<td></td>").html(data[i].label);
		    		tr.append(td);

		    		var td = $("<td></td>").html(data[i].name_author);
		    		tr.append(td);

		    		var td = $("<td></td>").html(new Date(data[i].created_at));
		    		tr.append(td);

		    		var td = $("<td></td>");
	  				tagsParse=data[i].tag.split(/[",:;]/);

	  				var tag = $('<code style="margin-right:10px;"></code>').html(tagsParse[4]);
	  				td.append(tag);
	  				
	  				var tag = $('<code style="margin-right:10px;"></code>').html(tagsParse[10]);
	  				td.append(tag);

	  				var tag = $('<code></code>').html(tagsParse[16]);
	  				td.append(tag);

		    		tr.append(td);

		    		table.append(tr);
	    		}
				$("#tableAuthors").html(table);	
				$("#paggination").DataTable();
	  		}
		})
	}
	getList();
	function showPost(id){
		location.href="/post?="+id;
	}
	</script>
</html>
