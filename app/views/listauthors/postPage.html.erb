<!DOCTYPE html>
<html>
	<head>
		<title>Статья</title>
	</head>
	<body>
		<div style="width:70%; margin:50px auto;">
			<h2>Статья</h2>
			<div class="bs-callout bs-callout-info" id="post">
				<h2 id="label"></h2>
				<h6 id="tags"></h6>
				<h4 id="author"></h4>
				<blockquote><p id="text"></p></blockquote>
				<div id="comments"></div>
			</div>
		</div>
	</body>
	<script type="text/javascript">
	function showPost(){
		var path = window.location.search.split('=');
		var id = path[1];
		$.ajax({
	  		url: '/getPost',
	  		data: {
	  			id:id
	  		},
	  		success: function(data){
	  			$("#label").html(data.label);
  				tagsParse=data.tag.split(/[",:;]/);

  				var tag = $('<code style="margin-right:10px;"></code>').html(tagsParse[4]);
  				$("#tags").append(tag);
  				
  				var tag = $('<code style="margin-right:10px;"></code>').html(tagsParse[10]);
  				$("#tags").append(tag);

  				var tag = $('<code></code>').html(tagsParse[16]);
  				$("#tags").append(tag);

	  			$("#author").html("Автор: "+data.name_author);
	  			$("#text").html(data.text);
	  		}
		})
		$.ajax({
	  		url: '/getComments',
	  		data: {
	  			id:id
	  		},
	  		success: function(data){
				var table = $('<table class="table table-striped"></table>');
				var tr = $('<tr></tr>');
	    		var td = $("<th></th>").html("Комментарии");
	    		tr.append(td);
	    		$("#comments").html(tr);
	    		for (var i=0; i<data.length; i++){
		    		var tr = $('<tr></tr>');

		    		var td = $("<td></td>").html(data[i].name);
		    		tr.append(td);

		    		var td = $("<td></td>").html(data[i].text);
		    		tr.append(td);

		    		table.append(tr);
	    		}
	    		$("#comments").append(table);

	  		}
		})
	}
	showPost();
	</script>
</html>
